@model Blog
<div class="container-fluid">
    <h1>Update</h1>
    <form method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="Title" class="form-label">Title1</label>
            <input asp-for="Title" class="form-control">
            <span asp-validation-for="Title" style="color:red"></span>
        </div>
        <div class="mb-3">
            <label for="Desc" class="form-label">Desc</label>
            <input asp-for="Desc" class="form-control">
            <span asp-validation-for="Desc" style="color:red"></span>
        </div>
        <div class="mb-3">
            <label for="Date" class="form-label">RedirectUrlText</label>
            <input asp-for="Date" class="form-control">
            <span asp-validation-for="Date" style="color:red"></span>
        </div>
        <div class="mb-3">
            <label for="ImageFile" class="form-label">ImageFile</label><br>
            <input asp-for="ImageFile" accept="image/*" class="form"><br>
            <span asp-validation-for="ImageFile" style="color:red"></span>
        </div>
        <div class="mb-3">
            <label for="IsDeactive" class="form-label">IsDeactive</label>
            <input asp-for="IsDeactive" class="form-control">
            <span asp-validation-for="IsDeactive" style="color:red"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

