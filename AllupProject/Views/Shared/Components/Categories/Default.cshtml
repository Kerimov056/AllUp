@model List<Category>
<div class="col-lg-3">
    <div class="header-menu-vertical">
        <h4 class="menu-title">
            <span>Shop by</span>
            Category
        </h4>
        <ul class="menu-content menu-expand">
            @foreach (var category in Model)
            {
            <li class="menu-item"><a asp-action="index" asp-controller="shop" asp-route-categoryid="@category.Id" asp-route-page="1">@category.Name</a></li>
                
            }
        </ul> <!-- menu content -->
    </div> <!-- header menu vertical -->
</div>
