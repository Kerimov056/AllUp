@model UserLoginViewModel
    <!--====== Login Part Start ======-->

    <section class="login-area pt-10">
        <div class="container-fluid custom-container">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <div class="login-register-wrapper mt-30">
                        <h4 class="allup-title">Login to Your Account</h4>
                        <form method="post">
                            <div class="single-form">
                                <input asp-for="UserName" placeholder="Username*">

                            </div>
                            <div class="single-form">
                                <input asp-for="Password" placeholder="Password">
                            </div>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="custom-checkbox mt-30">
                                <input type="checkbox" id="account">
                                <label for="account"></label>
                                <p>Remember me</p>
                            </div>
                            <div class="single-form">
                                <button class="main-btn main-btn-2" type="submit">Login</button>
                            </div>
                        </form>
                        <p class="mt-20"><a asp-action="forgotpassword">Lost your password?</a></p>
                        <p class="mt-10">No account? <a asp-action="register" asp-controller="account">Create one here.</a></p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!--====== Login Part Ends ======-->
    
